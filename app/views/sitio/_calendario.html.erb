<table border="0">
<% for dia in Calendario.find(:all, :conditions => "DAYOFYEAR(ADDDATE(fecha, 1)) >= DAYOFYEAR(NOW())  AND tipo = 'F'", :order => "DAYOFYEAR(fecha)", :limit => 2)%>
  <tr>
    <td>
      <table cellpadding="0" cellspacing="0" class="dayCalendar" align="left">
      <tr><td class="dayCalendar_mes">Mar</td></tr><tr><td class="dayCalendar_dia"><%= dia.fecha.strftime("%d")%></td></tr></table>
      <%= link_to dia.titulo, {:controller => 'calendarios', :action => 'mostrar', :fecha => dia.fecha.to_s(:date)}, :class=>"enlaceTitulo_ficha" %>
      <p class="texto_ficha"><%= dia.resumen %></p>
    </td>
  </tr>
<% end %>
</table>