<h1>Nuevo comentario</h1>

<%= error_messages_for :comentario %>

<% form_for(@comentario, :url => admin_foro_comentarios_path(params[:foro_id])) do |f| %>
  <p>
    <b>Nombre</b><br />
    <%= f.text_field :nombre %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Mensaje</b><br />
    <%= fckeditor :comentario, :mensaje, {:width => '600px', :height => '500px'} %>
  </p>

  <p>
    <%= f.submit "Crear" %>
  </p>
<% end %>

<%= link_to 'Ir al listado', admin_foro_comentarios_path %>
