<h1>Listado de periodistas registrados</h1>
<table>
  <tr>    
    <th>#</th>
    <th>Tipo Medio</th>
    <th>Departamento</th>
    <th>Nombre</th>
    <th>Telefono</th>
    <th>Email</th>
  </tr>
  <% numero = params[:page].nil? ? 0 : (params[:page].to_i - 1) %>
  <% contador = 0 %>
  <% for periodista in @periodistas %>
    <tr class="<%= cycle('odd','par') %>">
      <%contador +=1 %>
      <td><%= (numero*20 + contador) %></td>
      <td><%=h periodista.tipo_medio.tipoMedio if !periodista.tipo_medio.nil? %></td>
      <td><%=h periodista.departamento.departamento if !periodista.departamento.nil? %></td>
      <td><%=h periodista.nombre %></td>
      <td><%=h periodista.telefono %></td>
      <td><%=h periodista.email %></td>
    </tr>
  <% end %>
</table>