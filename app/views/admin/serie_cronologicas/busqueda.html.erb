<h1>Busqueda Avanzada en las series cronologicas</h1>
<% form_for(@serie_cronologica, :url => {:action => 'btodo'}, :html => {:method => :get}) do |f| %>
  <table class="no_flash">
    <tr>
      <th>Descriptor Generico<span class='ewmsg'>&nbsp;*</th>
      <td>
        <%= f.select(:idDescriptorGenerico, ['Todos'] + DescriptorGenerico.find(:all).collect() { |x| [x.descriptorGenerico, x.idDescriptorGenerico]}, {}, :onchange => "new Ajax.Request('/admin/serie_cronologicas/cambio', {asynchronous:true, evalScripts:true, parameters:Form.serialize(this.form) }); return false;") %>
        <%= submit_to_remote 'actualizar', "Cambiar", :url => {:action => 'cambio'}%>
