<h1>Nuevo municipio</h1>

<%= error_messages_for :municipio %>

<% form_for(@municipio, :url => admin_municipios_path) do |f| %>
  <p>
    <b>Departamento</b><br />
    <%= f.select :idDepartamento, DepartamentoBolivia.find(:all).collect { |x| [x.departamento, x.idDepartamento]} %>
  </p>  
  <p>
    <b>Municipio</b><br />
    <%= f.text_field :municipio %>
  </p>

  <p>
    <%= f.submit "Crear" %>
  </p>
<% end %>

<%= link_to 'Ir al listado', admin_municipios_path %>
