<h1>Listado de tipos de medios</h1>

<table>
  <tr>
    <th>Tipo de medio</th>
  </tr>
  <% for tipo_medio in @tipo_medios %>
    <tr class="<%= cycle('odd','par') %>">
      <td><%=h tipo_medio.tipoMedio %></td>
      <td><%= link_to 'Periodistas',  admin_tipo_medio_periodistas_path(tipo_medio) %></td>
      <td><%= link_to 'Instituciones periodisticas', admin_tipo_medio_institucion_periodisticas_path(tipo_medio) %></td>
      <td><%= link_to 'Editar', edit_admin_tipo_medio_path(tipo_medio) %></td>
      <td><%= link_to 'Borrar', admin_tipo_medio_path(tipo_medio), :confirm => 'Esta seguro de borrar este elemento?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Nuevo tipo_medio', new_admin_tipo_medio_path %>
