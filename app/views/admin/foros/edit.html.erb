<h1>Editar  foro</h1>

<%= error_messages_for :foro %>

<% form_for(@foro, :url => admin_foro_path) do |f| %>
  <table class="no_flash">
    <tr>
      <th>Autor<span class='ewmsg'>&nbsp;*</span></th>
      <td>
        <%= f.text_field :autor, :size => 80 %>
      </td>
    </tr>
    <tr>
      <th>Titulo del tema<span class='ewmsg'>&nbsp;*</span></th>
      <td>
        <%= f.text_field :titulo, :size => 80 %>
      </td>
    </tr>
    <tr>
      <th>Articulo<span class='ewmsg'>&nbsp;*</span></th>
      <td>
        <%= fckeditor :foro, :mensaje, {:width => '600px', :height => '500px'} %>
      </td>
    </tr>
  </table>
  <p>
    <%= f.submit "Actualizar" %>
  </p>
<% end %>

<%= link_to 'Mostrar', admin_foro_path(@foro) %> |
<%= link_to 'Ir al listado', admin_foros_path %>
