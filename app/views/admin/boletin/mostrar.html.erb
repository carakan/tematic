<h1>Enviar el boletin de informaci&oacute;n del Banco Tem&aacute;tico</h1>
<% form_tag '/admin/envio.php' do %>
  <table class="no_flash">
    <tr>
      <th>Titulo del boletin</th>
      <td>
        <%= text_field_tag 'titulo','', :size => 80  %>
      </td>
    </tr>
    <tr>
      <th>Enviar como prueba</th>
      <td>
        <%= check_box_tag 'prueba' %> <%= text_field_tag('email_prueba', '', :size => 50) %>
      </td>
    </tr>
    <tr>
      <th>Texto que se enviara</th>
      <td>
        <%= check_box_tag 'enviar_mensaje' %>
        
        <%= text_area_tag 'mensaje', nil, :cols => 80, :rows => 5 %>
      </td>
    </tr>
  </table>
  <%= hidden_field_tag('nombre_boletin', Time.now.to_date.to_s) %>
  <%= submit_tag 'Enviar'%>
<% end %>
<br>
<% form_tag({:action => 'mostrar'}, :method => :get)do %>
  <h4>Previsualizacion del boletin</h4>
  <iframe src="/boletin/<%= Time.now.to_date.to_s %>.html" width="100%" height="250" align="center"></iframe>
  <p>
    Titulo del boletin: <%= text_field_tag :nombre, 'Bolet&iacute;n Nro ' %>
  </p>
  <%= submit_tag 'Crear el boletin' %>
<% end %>