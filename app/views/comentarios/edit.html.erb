<h1>Editar  comentario</h1>

<%= error_messages_for :comentario %>

<% form_for(@comentario) do |f| %>
  <p>
    <b>Nombre</b><br />
    <%= f.text_field :nombre %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Mensaje</b><br />
    <%= f.text_area :mensaje %>
  </p>

  <p>
    <%= f.submit "Actualizar" %>
  </p>
<% end %>

<%= link_to 'Mostrar', @comentario %> |
<%= link_to 'Ir al listado', comentarios_path %>
