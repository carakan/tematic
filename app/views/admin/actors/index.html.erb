<h1>Listado de actores</h1>
<p>
<%= link_to 'Nuevo actor', new_admin_actor_path %>
</p>
<table>
  <tr>
    <th>#</th>
    <th>Nombre</th>
    <th>Urlarchivo</th>
  </tr>
  <% numero = params[:page].nil? ? 0 : (params[:page].to_i - 1) %>
  <% contador = 0 %>
  <% for actor in @actors %>
    <tr class="<%= cycle('odd','par') %>">
      <%contador +=1 %>
      <td><%= (numero*20 + contador) %></td>
      <td><%=h actor.nombre %></td>
      <td><%= image_tag('/archivos/imgMapaActores/' + actor.urlArchivo.filename) if !actor.urlArchivo.nil? %></td>
      <td><%= link_to 'Editar', edit_admin_actor_path(actor) %></td>
      <td><%= link_to 'Borrar', admin_actor_path(actor), :confirm => 'Esta seguro de borrar este elemento?', :method => :delete %></td>
      <td><%= link_to 'Posiciones del actor', admin_actor_posicion_actors_path(actor) %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @actors %>
<p>
<%= link_to 'Nuevo actor', new_admin_actor_path %>
</p>