<% titulo 'Contactos: ' + @titulo %>
<div id="box6">
  <%= link_to('Mensajes recibidos', :modo => 'recibido', :action => "index") %> | <%= link_to('Mensajes enviados', :modo => 'enviado', :action => "index") %>
</div>
<h3>Contactos: <%= @titulo %></h3>
<table>
  <tr>
    <th>De</th>
    <th>A</th>
    <th>Titulo</th>
    <th>Fecha</th>
  </tr>
  <% for mensaje in @mensajes %>
    <%- if mensaje.leido -%>
      <tr title="Mensaje leido: <%= mensaje.titulo %>">
    <% else %>
      <tr title="Mensaje no leido: <%= mensaje.titulo %>" class="unread">
    <% end %>
      <td><%=h(mensaje.enviado.nombre + ' ' + mensaje.enviado.apellido) %></td>
      <td><%=h(mensaje.recibido.nombre + ' ' + mensaje.recibido.apellido) if !mensaje.recibido.nil? %></td>
      <td><%= link_to(mensaje.titulo, mensaje, :class => "link3") %></td>
      <td><%=h mensaje.created_at.to_date.to_s(:date) %></td>
    </tr>
  <% end %>
</table>
<p>
  <%= link_to 'Nuevo mensaje', new_mensaje_path, :class => "link3" %>
</p>